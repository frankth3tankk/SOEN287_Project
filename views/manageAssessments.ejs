<%- include("partials/header"); -%>

<h1>All Assessments</h1>
  <table>
    <tr>
      <th>Assessment</th>
      <th>Total Marks</th>
      <th>Weight</th>
    </tr>

  <% assessments.forEach(function(assessment) { %>
    <tr>
      <td><%= assessment.name -%></td>
      <td><%= assessment.totalMarks %></td>
      <td><%= assessment.weight %></td>
      <td><a href="/assessment/<%= assessment._id %>">view</a></td>
      <td><a href="/editAssessment/<%= assessment._id %>">edit</a></td>
    </tr>
  <%}) %>
  </table>

  <a href="submitAssessment">Create an assessment</a>
  <br/><br/>

<%- include("partials/footer"); -%>
