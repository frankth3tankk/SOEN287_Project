<%- include("partials/header"); -%>

<style>
    table, td, th {  
      border: 2px solid black;
      text-align: center;
      margin-left: 3%;
      margin-right: auto;
      
    }
    
    table {
      border-collapse: collapse;
      width: 80%;
    }
    
    th, td {
      padding: 15px;
    }
    td {
        background-color: white;
    }
    th {
        background-color: grey;
    }
    </style>
    
<script type="text/javaScript" src="/addstudents.js"></script>

<h1 style="margin-left: 3%; text-align: left;">All Enrolled Students</h1>

<table>

    <tr>
        <th>Username</th>
        <th>StudentID</th>
        <th>Name</th>
    </tr>

    <% for (let student of enrolledStudents) { %>
    <tr>
        <td><%= student.username %></td>
        <td><%= student.studentID %></td>
        <td><%= student.name %></td>
    </tr>
    <% } %>

</table>
<br><hr><br>


<h2 style="margin-left: 3%; text-align: left;">Enroll users into this course</h2>

<form id="enrollstudentsform" action="/addstudents" onsubmit="addstudents()" method="post">

    <table>

        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Register</th>
        </tr>
    
        <% for (let user of basicUsers) { %>
        <tr>
            <td><%= user.username %></td>
            <td><%= user.name %></td>
            <td><input type="checkbox" name="usersToEnroll" value="<%= user.username %>"></td>
        </tr>
        <% } %>
    
    </table>

    <input style="margin-left: 40%; margin-top: 10px; background-color: gray; color: black; border-radius: 12px; width: 4cm; height: 1cm; font-size: medium;" type="submit" value="Register">

</form>
<br><hr><br>


<h2 style="margin-left: 20px; text-align: left;">Remove students from this course</h2>

<form id="removestudentsform" action="/removestudents" onsubmit="removestudents()" method="post">

    <table>

        <tr>
            <th>Username</th>
            <th>StudentID</th>
            <th>Name</th>
            <th>Remove</th>
        </tr>
    
        <% for (let student of enrolledStudents) { %>
        <tr>
            <td><%= student.username %></td>
            <td><%= student.studentID %></td>
            <td><%= student.name %></td>
            <td><input type="checkbox" name="usersToRemove" value="<%= student.username %>"></td>
        </tr>
        <% } %>
    
    </table>

    <input style="margin-left: 40%; margin-top: 10px; background-color: gray; color: black; border-radius: 12px; width: 4cm; height: 1cm; font-size: medium;" type="submit" value="Remove">

</form>

<%- include("partials/footer"); -%>
